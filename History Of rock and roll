<div id="output"></div>

<script>
const answers = {
q1: 'b',
q2: 'b',
q3: 'c',
q4: 'b',
q5: 'a',
q6: ['producer','record producer','creative producer','auteur'],
q7: ['surf rock','beach pop','surf-pop','california surf pop','surf pop'],
q8: ['the ventures','ventures'],
q9: ['civil rights movement','social movements','civil rights','social justice','anti-war movement','anti war movement'],
q10: ['detroit'],
q11: 'false',
q12: 'true',
q13: 'true',
q14: 'true',
q15: 'false'
};

function clean(s){ return String(s||'').trim().toLowerCase(); }

function grade(){
let score=0; let total=0; let details=[];
// MC (1 pt each)
for(let i=1;i<=5;i++){ total++; let k='q'+i; let v=document.querySelector(`input[name="${k}"]:checked`); if(v && v.value===answers[k]){ score++; details.push(k+': correct') } else details.push(k+': incorrect') }
// Short (2 pts each)
for(let i=6;i<=10;i++){ total+=2; let k='q'+i; let val=clean(document.querySelector(`[name="${k}"]`).value);
if(!val){ details.push(k+': blank') ; continue }
let ok=false;
if(Array.isArray(answers[k])) ok = answers[k].some(a=> val.includes(a));
else ok = clean(val)===answers[k];
if(ok){ score+=2; details.push(k+': correct') } else details.push(k+': incorrect') }
// T/F (1 pt each)
for(let i=11;i<=15;i++){ total++; let k='q'+i; let v=document.querySelector(`input[name="${k}"]:checked`); if(v && v.value===answers[k]){ score++; details.push(k+': correct') } else details.push(k+': incorrect or blank') }
// Bonus (freeform, up to 3 pts) - simple keyword check
total+=3; let bonus = clean(document.querySelector('[name="q16"]').value);
let bscore=0;
if(bonus){
if(bonus.includes('guitar') || bonus.includes('lead guitar') || bonus.includes('riff')) bscore++;
if(bonus.includes('production') || bonus.includes('studio') || bonus.includes('aesthetic') || bonus.includes('sound')) bscore++;
if(bonus.includes('influence') || bonus.includes('rhythm and blues') || bonus.includes('songwriting') || bonus.includes('cover')) bscore++;
if(bscore>3) bscore=3;
}
score+=bscore;
const out=document.getElementById('output');
out.innerHTML = `<div class="result"><strong>Score: ${score} / ${total}</strong><div style="margin-top:8px"><em>Details:</em><ul>${details.map(d=>'<li>'+d+'</li>').join('')}</ul></div>
<div class="key"><strong>Answer Key (short answers acceptable variants):</strong>
<ol>
<li>Phil Spector</li><li>Motown</li><li>LSD</li><li>Folk Rock</li><li>George Martin</li>
<li>Record producer / producer with creative control</li><li>Surf rock / surf-pop</li><li>The Ventures</li><li>Civil Rights / anti-war / social movements</li><li>Detroit</li>
<li>False</li><li>True</li><li>True</li><li>True</li><li>False</li>
<li>Bonus: answers vary (examples: British Invasion had more emphasis on vocal harmonies, image and singles-driven pop; US bands were more rootsy/R&B-influenced, surf/garage styles, and had different production/industry contexts.)</li>
</ol></div></div>`;
out.scrollIntoView({behavior:'smooth'});
}
</script>

